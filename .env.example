# Frontend Environment Variables (Vite)
# Copy this file to .env.local and fill in your values

# API Configuration
VITE_API_BASE_URL=https://your-api-gateway-url.execute-api.eu-central-1.amazonaws.com/dev
VITE_API_KEY=your-api-key-here

# AWS Configuration (for client-side if needed)
VITE_AWS_REGION=eu-central-1
VITE_AWS_S3_BUCKET=philocom-dev-images

# Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHATBOT=false

# AWS Cognito (Admin Panel Authentication)
VITE_COGNITO_USER_POOL_ID=eu-central-1_xxxxxxxxx
VITE_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_COGNITO_REGION=eu-central-1

# Backend Environment Variables (Lambda)
# Set these in AWS Lambda environment variables or .env file

# DynamoDB Tables
PROJECTS_TABLE=philocom-dev-projects
TESTIMONIALS_TABLE=philocom-dev-testimonials
CONTACTS_TABLE=philocom-dev-contacts
NEWSLETTER_TABLE=philocom-dev-newsletter
BLOG_POSTS_TABLE=philocom-dev-blog-posts

# SES Configuration (Deprecated - using Resend now)
SENDER_EMAIL=noreply@philocom.co
ADMIN_EMAIL=admin@philocom.co

# Email System Tables
EMAILS_TABLE=philocom-dev-emails
EMAIL_TEMPLATES_TABLE=philocom-dev-email-templates
EMAIL_CONTACTS_TABLE=philocom-dev-email-contacts

# Resend (Email Sending) - Stored in AWS SSM Parameter Store
# RESEND_API_KEY_PARAM=/philocom/resend-api-key
# WEBHOOK_SECRET_PARAM=/philocom/webhook-secret

# CORS
CORS_ORIGIN=https://philocom.co

# AWS Configuration
AWS_REGION=eu-central-1
